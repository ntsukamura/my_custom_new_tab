{
  "manifest_version": 3,
  "name": "My Custom New Tab",
  "version": "1.0",
  "description": "A premium, customizable new tab page with a card carousel.",
  "permissions": [
    "storage",
    "history",
    "bookmarks"
  ],
  "action": {
    "default_title": "New Tab",
    "default_icon": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://www.nicovideo.jp/*"
  ]
}